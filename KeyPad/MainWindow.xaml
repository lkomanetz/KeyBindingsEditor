<Window x:Class="KeyPad.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:KeyPad"
		xmlns:vm="clr-namespace:KeyPad.ViewModels"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance {x:Type vm:MainWindowDesignViewModel}, IsDesignTimeCreatable=True}"
		Title="KeyPad Editor" Height="350" Width="525">
	<DockPanel LastChildFill="True">
		<Menu DockPanel.Dock="Top"
			  ItemsSource="{Binding TopMenu}">
			<Menu.ItemContainerStyle>
				<Style TargetType="{x:Type MenuItem}">
					<Setter Property="Command" Value="{Binding Action}"/>
				</Style>
			</Menu.ItemContainerStyle>
			<Menu.ItemTemplate>
				<HierarchicalDataTemplate DataType="{x:Type local:TopBarMenuItem}"
										  ItemsSource="{Binding Children}">
					<TextBlock Text="{Binding Title}"/>
				</HierarchicalDataTemplate>
			</Menu.ItemTemplate>
		</Menu>
		<ContentPresenter DockPanel.Dock="Bottom"
						  Content="{Binding ProcessWatcherViewModel}"/>
		<ContentPresenter Content="{Binding PresenterViewModel}"/>
	</DockPanel>
</Window>
